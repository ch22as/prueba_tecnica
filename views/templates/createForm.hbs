<section>
    
    {{#each error}}
        <h3>{{e}}</h3>
    {{/each}}
  
</section>


<form action="/add" method="POST">
    
    <label for="title">Title:</label>
    <input type="text" id="title" name="title"  autofocus>

    <label for="description">Description:</label>
    <input type="text" id="description" name="description">

    <button>Create</button>
</form>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
   
            {{#each adList}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>{{date.day}}/{{date.month}}/{{date.year}}</td>
                    <td><a href="/delete/{{_id}}">Delete</a></td>
                </tr>
            {{/each}}
      
    </tbody>
</table>

<form class="select-date" action="/delete_by_date" method="POST">
    
    <label for="day">Day:</label>
    <input type="number" id="day" name="day" max="2"  autofocus>

    <label for="month">Month:</label>
    <input type="number" id="month" name="month" max="2">
    
   <label for="year">Year:</label>
    <input type="number" id="year" name="year" max="4">
    <button>Delete by date</button>
</form>