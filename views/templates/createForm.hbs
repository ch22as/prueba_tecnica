{{>login}}

<section class="error">
    {{#each error}}
    <h3>{{e}}</h3>
    {{/each}}

</section>

{{>adCreate}}
{{#if adList}}
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        
       
        {{#each adList}}
        <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{date.day}}/{{date.month}}/{{date.year}}</td>
            <td><a href="/delete/{{_id}}">Delete</a></td>
            <td><a href="/detail/{{_id}}">Get</a></td>
            <td><a href="favorite/{{_id}}">Favorites</a></td>
        </tr>
        {{/each}}

      
        
        
       
    </tbody>
</table>
{{/if}}
<form class="select-date" action="/delete_by_date" method="POST">

    <label for="day">Day:</label>
    <input type="number" id="day" name="day" min="1" max="31">

    <label for="month">Month:</label>
    <input type="number" id="month" name="month" min="1" max="12">

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" min="1900" max="9999">
    <button>Delete by date</button>
</form>